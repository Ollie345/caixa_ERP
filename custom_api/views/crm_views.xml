        <!-- Form view -->
        <record id="res_partner_form_lead_image_page" model="ir.ui.view">
            <field name="name">res.partner.form.lead.image.page</field>
            <field name="model">res.partner</field>
            <!-- use the base form as reference -->
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='geo_location']" position="after">
                    <page string="Lead Picture" name="lead_picture">
                        <group col="2">
                            <field name="lead_image" widget="image" class="oe_avatar"
                                   options="{'preview_image': 'avatar_128'}"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="lead_status"/>
                </xpath>
                <!--                <xpath expr="//field[@name='lead_status']" position="after">-->
                <!--                    <field name="lead_erp_id"/>-->
                <!--                </xpath>-->
                <xpath expr="//notebook" position="inside">
                    <field name="lead_image" widget="image" class="oe_avatar"/>
                </xpath>
            </field>
        </record>


