<odoo>
    <record id="view_dev_loan_loan_form" model="ir.ui.view">
        <field name="name">view.dev.loan.loan.form</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <form string="Loan">
                <header>
                    <button name="action_confirm_loan" invisible="state != 'draft'" string="Confirm"
                            class="btn-primary" type="object" groups="dev_loan_management.group_loan_user"/>

                    <button name="compute_installment" invisible="state != 'draft'" string='Calculate Installment'
                            type="object"
                            class="btn-primary" groups="dev_loan_management.group_loan_user"/>

                    <button name="action_set_to_draft" type="object" invisible="state != 'reject'" string='Set to Draft'
                            groups="dev_loan_management.group_loan_user"/>


                    <button name="action_approve_loan" invisible="state != 'confirm'" string="Approve"
                            class="btn-primary" type="object" groups="dev_loan_management.group_loan_manager"/>

                    <button name="%(action_dev_loan_reject_form)d" invisible="state != 'confirm'" string="Reject"
                            type="action" groups="dev_loan_management.group_loan_manager"/>

                    <button name="action_disburse_loan" invisible="state != 'approve'" string="Disburse Loan"
                            class="btn-primary" type="object" groups="account.group_account_invoice"/>

                    <button name="create_processing_fees_invoice"
                            invisible="state != 'approve' or processing_fee == False"
                            string="Create Processing Fees Invoice"
                            class="btn-primary" type="object" groups="account.group_account_invoice"/>

                    <button name="action_open_loan" invisible="state != 'disburse'" string="Open Loan"
                            class="btn-primary" type="object" groups="account.group_account_invoice"/>

                    <button name="%(dev_loan_management.action_generate_agreement)d" string="Generate Agreement"
                            class="btn-primary" type="action"
                            invisible="state not in ['confirm','approve','disburse','open']"/>

                    <button name="%(dev_loan_management.action_generate_notice)d" string="Generate Notice"
                            class="btn-primary" type="action"
                            invisible="state not in ['confirm','approve','disburse','open']"/>

                    <button type="action"
                            name="%(dev_loan_management.action_dev_create_loan_task)d"
                            string="Create Task"
                            class="oe_highlight"
                            invisible="state not in ['approve','disburse','open']"
                    />


                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_installment" type="object" class="oe_stat_button" icon="fa-book"
                                invisible="count_installment &lt;= 0"
                        >
                            <field string="View Installment" name="count_installment" widget="statinfo"/>
                        </button>
                        <button name="action_get_attachment_view" class="oe_stat_button" icon="fa-file-text-o"
                                type="object">
                            <field name="attachment_number" widget="statinfo" string="Documents"
                                   options="{'reload_on_button': true}"/>
                        </button>
                        <button type="object" invisible="invoice_count == 0" name="action_view_invoice"
                                class="oe_stat_button" icon="fa-external-link">
                            <field name="invoice_count" widget="statinfo" string="Invoice"/>
                        </button>
                        <button name="view_loan_agreement" class="oe_stat_button" icon="fa-file-text-o" type="object"
                                invisible="loan_agreement == 0">
                            <field name="loan_agreement" widget="statinfo" string="Agreement"/>
                        </button>
                        <button name="view_loan_notice" class="oe_stat_button" icon="fa-file-text-o" type="object"
                                invisible="loan_notice == 0">
                            <field name="loan_notice" widget="statinfo" string="Notice"/>
                        </button>
                        <button name="view_task_list" type="object" class="oe_stat_button" icon="fa-external-link"
                                invisible="task_count == 0">
                            <field name="task_count" widget="statinfo" string="Task"/>
                        </button>
                    </div>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="client_id" readonly="state != 'draft'"
                                   context="{'default_is_allow_loan':True}"/>
                            <field name="domain_loan_type_ids" invisible="1"/>
                            <field name="loan_type_id" readonly="state != 'draft'"
                                   domain="[('id', 'in', domain_loan_type_ids)]"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                            <field name="loan_term" readonly="state != 'draft'"/>
                            <field name="loan_amount" readonly="state != 'draft'"/>
                            <field name="loan_purpose" readonly="state != 'draft'"/>
                            <field name="collateral" readonly="state != 'draft'"/>
                            <field name="source_of_repayment" readonly="state != 'draft'"/>
                            <field name="total_interest"/>
                            <field name="emi_estimate"/>
                            <field name="paid_amount"/>
                            <field name="total_estimated_paid_amount"/>
                            <field name="remaing_amount"/>
                            <field name="processing_fee" readonly="state != 'draft'"/>
                            <field name="fee_type" invisible="processing_fee == False" readonly="state != 'draft'"/>
                            <field name="processing_fixed_amount"
                                   invisible="processing_fee == False or fee_type == 'percentage'"
                                   readonly="state not in ['draft','confirm','approve']"/>
                            <field name="processing_percentage"
                                   invisible="processing_fee == False or fee_type == 'fixed'"
                                   readonly="state not in ['draft','confirm','approve']"/>
                        </group>
                        <group>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="disbursement_date"
                                   invisible="state not in ['disburse','open','close']"
                                   readonly="1"/>
                            <field name="approve_date"
                                   invisible="state in ['draft','confirm','cancel']"
                                   readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                            <field name="co_borrower"/>
                            <field name="is_interest_apply" invisible="1"/>
                            <label for="interest_rate" invisible="not is_interest_apply"/>
                            <div>
                                <field name="interest_rate" readonly="1" force_save="1"
                                       invisible="not is_interest_apply"/>
                                <button name="%(action_update_rate)d" type="action" string='update' class="oe_link"
                                        invisible="not is_interest_apply or state != 'open'"
                                        context="{'default_rate':interest_rate}"/>
                            </div>
                            <field name="interest_mode" readonly="1" invisible="not is_interest_apply"/>
                            <field name="none_interest_month" invisible="not is_interest_apply"
                                   readonly="state != 'draft'"
                            />
                            <field name="next_installment_date" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string='Installments'>
                            <field name="installment_ids" readonly="1">
                                <list>
                                    <field name="none_interest" column_invisible="1"/>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="opening_balance"/>
                                    <field name="amount" sum="amount"/>
                                    <field name="interest" sum="interest"/>
                                    <field name="total_amount" string='EMI (Installment)' sum="total_amount"/>
                                    <field name="closing_balance"/>
                                    <field name="state"/>
                                    <field name="is_last_line" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="loan_state" column_invisible="1"/>
                                    <button name="%(action_dev_paid_installment)d"
                                            invisible="loan_state != 'open' or state in ('paid') "
                                            string="Pay"
                                            class="btn-primary"
                                            context="{'default_opening_balance':opening_balance,
                                                  'default_principal_amount':amount,
                                                  'default_interest_amount':interest,
                                                  'default_emi_amount':total_amount,
                                                  'default_closing_amount':closing_balance,
                                                  'default_paid_amount':total_amount,
                                                 }"
                                            type="action" groups="account.group_account_invoice"/>
                                    <button name="action_view_journal_entry"
                                            string="View Journal Entry"
                                            invisible="journal_entry_id == False or state not in ['paid']"
                                            class="btn-primary"
                                            type="object" groups="account.group_account_invoice"/>
                                </list>
                            </field>
                        </page>
                        <page name="advance_payment" string='Advance Payment'>
                            <button name="%(action_add_payment_line)d" string='Add Payment' type="action"
                                    class="btn-primary"
                                    context="{'default_loan_id':True}"
                                    invisible="state != 'open' "
                            />
                            <field name="adv_payment_lines" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="interest"/>
                                    <field name="paid_amount"/>
                                    <field name="state"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <button name="action_pay_advance_payment" type="object"
                                            string='Pay' class="btn-primary"
                                            invisible="state != 'unpaid' "
                                    />
                                </list>
                            </field>
                        </page>
                        <page string='Loan Proof Documents'>
                            <group>
                                <field name="proof_ids" widget="many2many_tags"
                                       readonly="state != 'draft' "
                                />
                            </group>
                            <separator string="Documents"/>
                            <field name="loan_document_ids" mode="kanban"
                                   context="{'default_res_id': id,'default_res_model': 'dev.loan.loan'}">
                                <kanban>
                                    <field name="name"/>
                                    <field name="res_id"/>
                                    <field name="res_model"/>
                                    <field name="datas"/>
                                    <field name="id"/>
                                    <field name="mimetype"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click" style="max-width: 200px">
                                                <div class="o_kanban_record_top">
                                                    <img t-att-src="'/web/image/ir.attachment/' + record.id.raw_value + '/datas'"
                                                         height="100" width="182"
                                                         class="oe_avatar oe_kanban_avatar_smallbox mb0"
                                                         alt="Attachment"/>

                                                    <a t-if="! read_only_mode" type="delete" class="text-danger"
                                                       title="Delete">
                                                        <i class="fa fa-times"/>
                                                    </a>
                                                </div>
                                                <div class="oe_kanban_details" style="text-align:center">
                                                    <p>
                                                        <h5>
                                                            <field name="name"/>
                                                        </h5>
                                                    </p>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string='Accounting' groups="account.group_account_invoice"
                              invisible="state in ['draft','confirm','approve','cancel','reject'] "
                        >
                            <group>
                                <group>
                                    <field name="loan_account_id" readonly="state != 'approve' "/>

                                    <field name="disburse_journal_id" readonly="state != 'approve' "/>
                                </group>
                                <group>
                                    <field name="disburse_journal_entry_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string='Notes'>
                            <br/>
                            <field name="notes" readonly="state != 'draft'"/>
                        </page>
                        <page name="Co-Borrower" string='Co-Borrower' invisible="co_borrower != True">
                            <field name="co_borrower_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="relation_id"/>
                                    <field name="contact_no"/>
                                    <field name="address"/>
                                </list>
                            </field>
                        </page>
                        <page string="Co-Borrower Documents" invisible="co_borrower != True">
                            <field name="co_borrower_document_ids" mode="kanban"
                                   context="{'default_res_id': id,'default_res_model': 'dev.loan.loan','res_model':'dev.loan.loan','res_name':name}">
                                <kanban>
                                    <field name="name"/>
                                    <field name="res_id"/>
                                    <field name="res_model"/>
                                    <field name="datas"/>
                                    <field name="id"/>
                                    <field name="mimetype"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click" style="max-width: 200px">
                                                <div class="o_kanban_record_top">
                                                    <img t-att-src="'/web/image/ir.attachment/' + record.id.raw_value + '/datas'"
                                                         height="100" width="182"
                                                         class="oe_avatar oe_kanban_avatar_smallbox mb0"
                                                         alt="Attachment"/>

                                                    <a t-if="! read_only_mode" type="delete" class="text-danger"
                                                       title="Delete">
                                                        <i class="fa fa-times"/>
                                                    </a>
                                                </div>
                                                <div class="oe_kanban_details" style="text-align:center">
                                                    <p>
                                                        <h5>
                                                            <field name="name"/>
                                                        </h5>
                                                    </p>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page name="Witness" string='Witness'>
                            <field name="witness_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="contact_no"/>
                                    <field name="address"/>
                                    <field name="witness_identification"/>
                                </list>
                            </field>
                        </page>
                        <page name="Required Documents" string='Required Documents'>
                            <group>
                                <div class="col-12">
                                    <field name="percentage" widget='percentpie'/>
                                </div>
                            </group>
                            <group>
                                <group>
                                    <field name="loan_checklist_template_id" readonly="state != 'draft'"/>
                                </group>
                            </group>
                            <field name="checklist_line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name='document_id'/>
                                    <field name="document_type_id"/>
                                    <field name="state" decoration-danger="state == 'cancel'"/>
                                    <button string="Done" type="object" name="move_to_complete" class="btn-success"
                                            invisible="state in ['done','cancel']"/>
                                    <button string="Cancel" type="object" name="move_to_cancel" class="btn-danger"
                                            invisible="state in ['done','cancel']"/>
                                </list>
                            </field>
                        </page>
                        <page string='Reject Reason' invisible="state != 'reject'">
                            <group>
                                <field name="reject_user_id" readonly="1"/>
                            </group>
                            <br/>
                            <field name="reject_reason" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_dev_loan_loan_tree" model="ir.ui.view">
        <field name="name">view.dev.loan.loan.list</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <list string="Loan Request" decoration-success="state=='close'" decoration-danger="state=='reject'"
                  decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="loan_type_id"/>
                <field name="request_date"/>
                <field name="loan_amount" sum="loan_amount"/>
                <field name="interest_mode"/>
                <field name="interest_rate"/>
                <field name="state"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!--Kanban-->
    <record id="view_dev_loan_loan_kanban" model="ir.ui.view">
        <field name="name">view.dev.loan.loan.kanban</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column o_opportunity_kanban" archivable="false"
                    sample="1" js_class="crm_kanban">
                <field name="state"/>
                <field name="name"/>
                <field name="color"/>
                <field name="loan_type_color"/>
                <field name="client_id"/>
                <field name="request_date"/>
                <field name="approve_date"/>
                <field name="disbursement_date"/>
                <field name="next_installment_date"/>
                <field name="loan_amount"/>
                <field name="loan_term"/>
                <field name="loan_type_id"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable">
                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                        </t>
                        <t t-if="widget.deletable">
                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        </t>
                    </t>
                    <t t-name="kanban-box">
                        <div t-att-style="'background-color: ' + (record.loan_type_color.raw_value or '#FFFFFF') + '; border-radius: 10px;'"
                             t-attf-class="oe_kanban_global_click oe_kanban_card d-flex flex-column">

                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title mb16">
                                    <div class="o_primary">
                                        <a type="edit" class="mr-auto">
                                            <span class="o_text_overflow">
                                                <field name="name"/>
                                            </span>
                                            <br></br>
                                            <span class="o_text_overflow" style="color:black;" t-if="record.name">
                                                <span class="fa fa-user me-2" aria-label="Partner" title="Client"/>
                                                <field name="client_id"/>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content mt0">
                                <div class="row">
                                    <div class="col-12">
                                        <div>
                                            <span style="font-size: 15px;">
                                                <b>Loan Type :</b>
                                                <field name="loan_type_id"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size: 15px;">
                                                <b>Loan Amount :</b>
                                                <field name="loan_amount"/>
                                                <field name="currency_id" invisible="1"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size: 15px;">
                                                <b>Loan Term :</b>
                                                <field name="loan_term"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size: 15px;">
                                                <b>Request Date:</b>
                                                <field name="request_date"/>
                                            </span>
                                        </div>
                                        <t t-if="record.disbursement_date.value">
                                            <div>
                                                <span style="font-size: 15px;">
                                                    <b>Disbursement Date:</b>
                                                    <field name="disbursement_date"/>
                                                </span>
                                            </div>
                                        </t>
                                        <t t-if="record.state.value == 'Approve'">
                                            <div>
                                                <span style="font-size: 15px;">
                                                    <b>Approve Date:</b>
                                                    <field name="approve_date"/>
                                                </span>
                                            </div>
                                        </t>
                                        <t t-if="record.next_installment_date.value">
                                            <div>
                                                <span style="font-size: 15px;">
                                                    <b>Next Installment Date:</b>
                                                    <field name="next_installment_date"/>
                                                </span>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                                <div style="margin-top:10px;">
                                </div>
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left">
                                        <div class="o_project_kanban_boxes d-flex align-items-baseline">
                                        </div>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field t-if="record.state.value &amp;&amp; widget.editable" name="state"
                                               widget="badge"
                                               decoration-info="state in ['draft','confirm']"
                                               decoration-warning="state in ['approve','disburse']"
                                               decoration-danger="state in ['cancel','close','reject']"
                                               decoration-success="state=='open'"/>
                                        <span t-if="record.state.value &amp;&amp; !widget.editable"
                                              t-att-class="'o_status_bubble mx-0 o_color_bubble_' + record.state.value"
                                              t-att-title="record.state.value"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--    calender-->
    <record id="view_dev_loan_loan_calendar" model="ir.ui.view">
        <field name="name">view.dev.loan.loan.calendar</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <calendar string="Loan Request Calendar"
                      date_start="request_date"
                      mode="month"
                      color="user_id"
                      quick_create="0">
                <field name="name"/>
                <field name="loan_type_id"/>
                <field name="loan_amount"/>
                <field name="user_id" avatar_field="image_128"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!--    pivot-->
    <record model="ir.ui.view" id="view_dev_loan_loan_pivot">
        <field name="name">view.dev.loan.loan.pivot</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <pivot string="Loan Request Pivot" sample="1">
                <field name="request_date" type="row"/>
            </pivot>
        </field>
    </record>

    <!--    graph-->
    <record model="ir.ui.view" id="view_dev_loan_loan_graph">
        <field name="name">view.dev.loan.loan.graph</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <graph string="Loan Request Graph" sample="1">
                <field name="client_id"/>
            </graph>
        </field>
    </record>

    <!--Activity-->
    <record id="view_dev_loan_loan_activity" model="ir.ui.view">
        <field name="name">view.dev.loan.loan.activity</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <activity string="Activity">
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <field name="name"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>


    <record id="filter_dev_loan_loan" model="ir.ui.view">
        <field name="name">filter.dev.loan.loan</field>
        <field name="model">dev.loan.loan</field>
        <field name="arch" type="xml">
            <search string="Search Loan">
                <field name="client_id" operator="child_of"/>
                <field name="name" string="Loan" filter_domain="[('name','ilike',self)]"/>
                <filter string="Request Date" name="request_date" date="request_date"/>
                <filter string="Approve Date" name="approve_date" date="approve_date"/>
                <filter string="Disbursement Date" name="disbursement_date" date="disbursement_date"/>
                <group expand="0" string="Group By">
                    <filter string="Borrower" name="client_id" context="{'group_by':'client_id'}"/>
                    <filter string="Loan Type" name="loan_type_id" context="{'group_by':'loan_type_id'}"/>
                    <filter string="Request Date" name="request_date" context="{'group_by':'request_date'}"/>
                    <filter string="Disbursement Date" name="disbursement_date"
                            context="{'group_by':'disbursement_date'}"/>
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_dev_loan_loan" model="ir.actions.act_window">
        <field name="name">Loan Request</field>
        <field name="res_model">dev.loan.loan</field>
        <field name="domain">[('state','in',['draft'])]</field>
        <field name="view_mode">list,form,kanban,activity,calendar,pivot,graph</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a Loan Request.
            </p>
        </field>
    </record>


    <record id="action_dev_loan_loan_approve" model="ir.actions.act_window">
        <field name="name">Loan Request</field>
        <field name="res_model">dev.loan.loan</field>
        <field name="domain">[('state','not in',['draft','reject','cancel','close'])]</field>
        <field name="view_mode">list,form,kanban,activity,calendar,pivot,graph</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
