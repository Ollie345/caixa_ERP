<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_loan_collection_wizard_form" model="ir.ui.view">
        <field name="name">view.loan.collection.wizard.form</field>
        <field name="model">loan.collection.wizard</field>
        <field name="arch" type="xml">
            <form string="Loan Collection">
                <sheet>
                    <group>
                        <group>
                            <field name="current_month" />
                            <field name="overdue_month" />
                        </group>
                        <group>
                            <field name="next_month"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Loan Collection" name="action_print_pdf" type="object" class="oe_highlight"/>
&#160;&#160;or&#160;&#160;
                        <button string="Close Window" class="oe_link" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_loan_collection" model="ir.actions.act_window">
        <field name="name">Loan Collection</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.collection.wizard</field>
        <field name="view_mode">form</field>
        <!-- <field name="view_id" ref="view_loan_collection_wizard_form"/> -->
        <field name="target">new</field>
    </record>

    <menuitem name="Loan Collection" id="menu_dev_loan_collection" parent="dev_loan_management.menu_dev_installment_report" action="action_loan_collection" sequence="3"/>

</odoo>
