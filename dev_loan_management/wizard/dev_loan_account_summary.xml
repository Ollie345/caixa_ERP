<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_loan_account_summary_wizard_form" model="ir.ui.view">
        <field name="name">view.loan.account.summary.wizard.form</field>
        <field name="model">dev.loan.account.summary</field>
        <field name="arch" type="xml">
            <form string="Loan Account Summary">
                <sheet>
                    <group>
                        <group>
                            <field name="customer_select" />
                        </group>
                        <group>
                            <field name="loan_status"/>
                        </group>
                    </group>
                    <separator string="Select Customer" invisible="customer_select != 'selected_customer'" ></separator>
                        <!-- <group invisible="customer_select != 'selected_customer'"> -->
                        <field name="customer_ids" domain="[('is_allow_loan','=',True)]" invisible="customer_select != 'selected_customer'"/>
                    <!-- </group> -->
                    
                   
                    <footer>
                        <button string="Loan Account Summary" name="excel_loan_account_summary" type="object" class="oe_highlight"/>
&#160;&#160;or&#160;&#160;
                        <button string="Close Window" class="oe_link" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_loan_account_summary" model="ir.actions.act_window">
        <field name="name">Loan Account Summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dev.loan.account.summary</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="loan_account_summary_menu"
        name="Loan Account Summary"
        action="action_loan_account_summary"
        parent="dev_loan_management.menu_dev_installment_report"
        sequence="4"/>



</odoo>