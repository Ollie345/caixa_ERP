<odoo>
    <record id="form_ln_document_form" model="ir.ui.view">
        <field name="name">form.ln.document.form</field>
        <field name="model">ln.base.documents</field>
        <field name="arch" type="xml">
            <form string="Loan Documents">
                <sheet>
		         <group>
				   <group>
				         <field name="name" />
				   </group>
				   <group>
				         <field name="document_type_id" />
				   </group>
		         </group>
		         <separator string="Description"/>
		           <field name="description" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ln_document_tree" model="ir.ui.view">
        <field name="name">view.ln.document.tree</field>
        <field name="model">ln.base.documents</field>
        <field name="arch" type="xml">
            <list string="Loan Documents" >
                <field name="name" />
                <field name="document_type_id" />
            </list>
        </field>
    </record>

    <record id="action_ln_document" model="ir.actions.act_window">
        <field name="name">Required Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ln.base.documents</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_state' : 'draft'}</field>
    </record>

    <menuitem name="Required Documents" id="menu_ln_document" parent='main_menu_dev_loan_document_checklist'
              action="action_ln_document" sequence='2'/>
</odoo>
