<odoo>
    <record id="view_dev_loan_type_form" model="ir.ui.view">
        <field name="name">view.dev.loan.type.form</field>
        <field name="model">dev.loan.type</field>
        <field name="arch" type="xml">
            <form string="Loan Type">
                <sheet>
                   <field name="image" widget="image" class="oe_avatar" required="1"/>
                    <div class="oe_title">
                         <field name="name" style="font-size: 22px;font-weight: bold;" placeholder="Loan Type Name"/>
                    </div>
                    <br></br>
<!--                    <br></br>-->
<!--                    <br></br>-->
                    <group string="Loan Information">
                        <group>
<!--                            <field name="name"/>-->
                            <field name="loan_amount"/>
                            <field name="loan_term_by_month"/>
                            <!-- <field name="proof_ids" widget="many2many_tags" options="{'no_create_edit': True}"/> -->
                            <field name="borrower_category_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="is_interest_apply"/>
                            <field name="interest_mode"
                                invisible="not is_interest_apply" required="is_interest_apply"
                             />
                             <!-- attrs="{'invisible':[('is_interest_apply','=',False)], 'required':[('is_interest_apply','=',True)]}" -->
                            <field name="rate" invisible="not is_interest_apply" required="is_interest_apply"/>
                            <field name="none_interest_month" invisible="is_interest_apply"/>
                            <field name="proof_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                            <field name="eligibility_ids" nolabel="1"/>
                        </group>
                    </group>
                    <notebook>
                    <page string="Accounting">
                        <group>
                            <group>
                                <field name="loan_account_id"/>
                                <field name="installment_account_id"/>
                                <field name="interest_account_id"/>
                                <field name="processing_fees_product_id"/>
                            </group>
                            <group>
                                <field name="disburse_journal_id"/>
                                <field name="loan_payment_journal_id"/>
                            </group>
                        </group>
                    </page>
                        <page string="Other Details">
                        <group>
                            <group>
                                <field name="is_required_documents"/>
                                <field name="color" placeholder="#FFFFFF"/>
                            </group>
                            <group>
                                <field name="reminder_count"/>
                                 <field name="reminder_days" widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dev_loan_type_tree" model="ir.ui.view">
        <field name="name">view.dev.loan.type.tree</field>
        <field name="model">dev.loan.type</field>
        <field name="arch" type="xml">
            <list string="Loan Proofs">
                <field name="name"/>
                <field name="is_interest_apply"/>
                <field name="interest_mode"/>
                <field name="rate"/>
            </list>
        </field>
    </record>


    <record id="action_dev_loan_type" model="ir.actions.act_window">
        <field name="name">Loan Type</field>
        <field name="res_model">dev.loan.type</field>
        <field name="view_mode">list,form</field>
    </record>

	<!--  Menu Items-->
    
    
    <menuitem name="Loan Type" id="menu_dev_loan_type" parent="dev_loan_management.menu_dev_loan_configration" action="action_dev_loan_type" sequence="2"/>
</odoo>
