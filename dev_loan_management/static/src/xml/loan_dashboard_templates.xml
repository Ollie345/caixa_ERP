    <t t-name="loan_tables">
        <div class="row mt-4 gy-2 md-5">
<div class="col-lg-6">
    <div class="card table-card table-responsive">
        <div class="card-header table-header row-12">
            <div class="d-flex justify-content-between align-items-center w-100">
                <span class="fw-bold ms-3">Upcoming Installment</span>

                <div class="d-flex align-items-center me-3">
                    <label for="loan_upcoming_selection" class="me-2 fw-bold">Duration:</label>
                    <select class="form-select" id="loan_upcoming_selection" t-on-change="(ev) => this.render_upcoming_installment_list(this.state.rowsPerPage, this.state.currentUpcInsLst_page)">
                        <option value="0">Today</option>
                        <option value="28">Next 28 Days</option>
                        <option value="90">Next 90 Days</option>
                        <option value="365">Next 365 Days</option>
                    </select>
                </div>
            </div>
        </div>

        <table id="all_upcoming_installment_list" class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Loan Id</th>
                    <th>Client</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody> </tbody>
        </table>

        <t t-if="this.state.all_upcoming_ins_list_length">
            <div class="d-flex align-items-center justify-content-center text-primary m-2">
                <i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true" id='upcoming_prev_button' t-on-click="(e) => this.upcomingPrevPage(e)"> </i>
                <span style="font-weight:600; font-size:15px; margin:0px 5px 0px 5px"> Page <t t-esc="this.state.currentUpcInsLst_page"/> of <t t-esc="Math.ceil(this.state.all_upcoming_ins_list_length/this.state.rowsPerPage)"/> </span>
                <i class="fa fa-arrow-circle-right fa-2x" id ='upcoming_next_button' aria-hidden="true" t-on-click="(e) => this.upcomingNextPage(e)"> </i>
            </div>
        </t>
    </div>
</div>

            <div class='col-lg-6'>
                <div class="card table-card table-responsive ">
                    <div class="card-header table-header">
                        <span>
                            Overdue Installment
                        </span>
                    </div>
                    <table id="all_overdue_installment_list" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Loan Id</th>
                                <th>Client</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody> </tbody>
                    </table>
                    <t t-if="this.state.all_overdue_ins_list_length">
                        <div class="d-flex align-items-center justify-content-center text-primary m-2">
                            <i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true" id='overdue_prev_button' t-on-click="(e) => this.overduePrevPage(e)"> </i>
                            <span style="font-weight:600; font-size:15px; margin:0px 5px 0px 5px"> Page <t t-esc="this.state.currentOverInsLst_page"/> of <t t-esc="Math.ceil(this.state.all_overdue_ins_list_length/this.state.rowsPerPage)"/> </span>
                            <i class="fa fa-arrow-circle-right fa-2x" id ='overdue_next_button' aria-hidden="true" t-on-click="(e) => this.overdueNextPage(e)"> </i>
                        </div>
                    </t>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12" style="margin:20px;"> </div>
        </div>
        </t>
</templates>
