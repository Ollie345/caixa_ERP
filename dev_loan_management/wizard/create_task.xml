<odoo>
        <record id="dev_create_loan_task_view" model="ir.ui.view">
            <field name="name">Create Loan Task</field>
            <field name="model">create.loan.task</field>
            <field name="arch" type="xml">
                <form string="Wizard">
                    <group>
                        <group>
                             <field name="name" required="1"/>
                             <field name="date_deadline"/>
                             <field name="project_id" required="1"/>
                        </group>
                        <group>
                             <field name="partner_id" readonly="1" />
                             <field name="user_id"/>
                             <field name="tag_ids" widget="many2many_tags" required="1"/>
                             <field name="loan_id" invisible="1"/>
                        </group>
                    </group>

                    <footer>
                        <button name="create_task" string="Create" class="oe_highlight"  type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_dev_create_loan_task" model="ir.actions.act_window">
            <field name="name">Create Task</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.loan.task</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>
