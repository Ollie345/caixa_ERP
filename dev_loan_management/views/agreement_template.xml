<odoo>
    <record id="form_loan_agreement_template_view" model="ir.ui.view">
        <field name="name">form.loan.agreement.template.view</field>
        <field name="model">agreement.template</field>
        <field name="arch" type="xml">
            <form string="Terms &amp; Notices Template Form">
		         <group>
				   <group>
				         <field name="name" />
				   </group>
		         </group>
                 <notebook>
                     <page string="Description">
                        <field name="description" placeholder="Description.."/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_loan_agreement_template_tree" model="ir.ui.view">
        <field name="name">view.loan.agreement.template.tree</field>
        <field name="model">agreement.template</field>
        <field name="arch" type="xml">
            <list string="Terms &amp; Notices Template List" >
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="action_agreement_template" model="ir.actions.act_window">
        <field name="name">Terms &amp; Notices Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agreement.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Terms &amp; Notices Template" id="menu_loan_agreement_template" parent='main_menu_loan_agreement_config'
              action="action_agreement_template" sequence="3"/>
</odoo>
