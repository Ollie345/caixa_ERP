<odoo>
            
        <record id="paperformat_dev_loan_man" model="report.paperformat">
            <field name="name">Dev loan Report Paper</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">47</field>
            <field name="margin_bottom">22</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">42</field>
            <field name="dpi">90</field>
        </record>
        
        <record id="print_interest_certificate" model="ir.actions.report">
        <field name="name">Interest Certificate</field>
        <field name="model">dev.interest.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.interest_certificate_template</field>
        <field name="report_file">dev_loan_management.interest_certificate_template</field>
        <field name="binding_model_id" ref="dev_loan_management.model_dev_interest_certificate"/>
        <field name="paperformat_id" ref="paperformat_dev_loan_man"/>
        <field name="binding_type">report</field>
    </record> 
     

    <record id="print_installment_summary" model="ir.actions.report">
        <field name="name">Installment Summary</field>
        <field name="model">dev.installment.summary</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.installment_summary_template</field>
        <field name="report_file">dev_loan_management.installment_summary_template</field>
        <field name="binding_model_id" ref="dev_loan_management.model_dev_installment_summary"/>
        <field name="paperformat_id" ref="paperformat_dev_loan_man"/>
        <field name="binding_type">report</field>
    </record> 

    
    <record id="action_print_loan_report" model="ir.actions.report">
        <field name="name">Loan</field>
        <field name="model">dev.loan.loan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.report_print_loan_template</field>
        <field name="report_file">dev_loan_management.report_print_loan_template</field>
        <field name="binding_model_id" ref="dev_loan_management.model_dev_loan_loan"/>
        <field name="paperformat_id" ref="paperformat_dev_loan_man"/>
        <field name="binding_type">report</field>
    </record> 
    
    <record id="action_tmpl_customer_loan_letter" model="ir.actions.report">
        <field name="name">Outstanding Letter</field>
        <field name="model">dev.loan.loan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.tmpl_loan_ltr</field>
        <field name="report_file">dev_loan_management.tmpl_loan_ltr</field>
        <field name="binding_model_id" ref="dev_loan_management.model_dev_loan_loan"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Agreement report -->

    <record id="action_report_agreement" model="ir.actions.report">
        <field name="name">Agreement report</field>
        <field name="model">ln.agreement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.loan_agreement_template</field>
        <field name="report_file">dev_loan_management.loan_agreement_template</field>
        <field name="binding_model_id" ref="dev_loan_management.model_ln_agreement"/>
        <field name="print_report_name">'%s - Agreement detail' % (object.name)</field>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_loan_collection" model="ir.actions.report">
        <field name="name">Loan Collection report</field>
        <field name="model">loan.collection.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.loan_collection_template</field>
        <field name="report_file">dev_loan_management.loan_collection_template</field>
        <field name="binding_model_id" ref="dev_loan_management.model_loan_collection_wizard"/>
        <!-- <field name="print_report_name">'%s - Agreement detail' % (object.name)</field> -->
        <field name="binding_type">report</field>
    </record>

    <!--    notice report -->
    <record id="action_report_notice" model="ir.actions.report">
        <field name="name">Notice report</field>
        <field name="model">ln.notice</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_loan_management.loan_notice_template</field>
        <field name="report_file">dev_loan_management.loan_notice_template</field>
        <field name="binding_model_id" ref="dev_loan_management.model_ln_notice"/>
        <field name="print_report_name">'%s - Notice detail' % (object.name)</field>
        <field name="binding_type">report</field>
    </record>
		          
		            
        
		
</odoo>
