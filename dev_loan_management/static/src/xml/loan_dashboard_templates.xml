                                <div class="col-6 ">
                                    <label for="top_partner_loan_count"
                                              class="form-label fw-bolder">Top Partner</label>
                                    <select id="top_partner_loan_count" class="form-select form-control pull-left"
                                                t-on-change="(ev) => this.partner_loan_amount_chart_data(ev)">
